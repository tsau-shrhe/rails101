<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
	<h2>編輯討論版</h2>
	<hr>
	<%= form_for(@group) do |f| %>
		<%= f.label :title, "標題" %>
		<%= f.text_field :title %>
		<br>
		<%= f.label :description, "內容" %>
		<%= f.text_field :description %>
		<br>
		<%= f.submit "送出", :disable_with => '送出中' %>
	<% end %>
	<hr>
	<%= link_to "取消返回",root_path,:class => "btn btn-success btn-block"  %>
</div>