<div class="col-md-12">
  <div class="group">
    <%= link_to("新增討論", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>標題</td>
        <td>內容</td>
        <td>發佈者</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= group.user.email %></td>
          <td>
            <% if current_user && current_user == group.user %>
              <%= link_to("編輯", edit_group_path(group), class: "btn btn-sm btn-success")%>
              <%= link_to("刪除", group_path(group),    class: "btn btn-sm btn-danger",method: :delete, data: { confirm: "您確定要刪除?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>