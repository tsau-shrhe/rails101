<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="group">
		<span class="pull-right">
			<% if current_user && current_user.is_member_of?(@group) %>
				<span class="label label-info">群組成員</span>
			<% else %>
				<span class="label label-warning">不是群組成員</span>
			<% end %>
		</span>
		<%= link_to("寫文章", new_group_post_path(@group), :class => "btn btn-success pull-right")%>
		<% if current_user && current_user == @group.user %>
			<%= link_to "編輯", edit_group_path(@group), :class => "btn btn-primary pull-right" %>
		<% end %>
		</div>
	<h2><%= @group.title %></h2>
	<p><%= @group.description %></p>
	<!-- post文章 -->
	<table class="table">
		<thead>
			<tr>
				<th>文章內容</th>
				<th>發表者</th>
				<th>發表時間</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><%= post.content %></td>
					<td><%= post.user.email %></td>
					<td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<!-- post文章end -->
	<!-- 分頁 -->
	<div class="text-center">
		<%= will_paginate @posts %>
	</div>
	<!-- 分頁end -->
	<hr>
	<%= link_to "返回", root_path, :class => "btn btn-info btn-block" %>
</div>